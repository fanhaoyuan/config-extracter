{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "dist",
        "declaration": true
    },
    "include": ["src/**/*", "__tests__/**/*"],
    "exclude": ["node_modules", "dist"]
}
