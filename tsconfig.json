{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "dist",
        "declaration": false
    },
    "include": ["src/**/*", "__tests__/**/*"],
    "exclude": ["node_modules", "dist"]
}
